<div class="container">
  <div class="newbox">
    <% @playlists.each do |playlist| %>
      <%= link_to "#{playlist.subject}", playlist_path(playlist) %>
      <%= button_to "Delete This Playlist", playlist_path(playlist.id), method: :delete, data: { confirm: 'Are you sure?' }  %><br>
    <% end %>
    <%= link_to "Search", podcasts_search_path, class: "btn btn-primary"%>
  </div>
</div>

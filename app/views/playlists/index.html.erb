<%= render :partial => "layouts/navbar" %>

<div class="longboxed">
  <% @playlists.each do |playlist| %>
  <h2 class="funfont center"><%= link_to "#{playlist.subject}", playlist_path(playlist) %></h2>
  <div class="center"><%= button_to "Delete This Playlist", playlist_path(playlist.id), method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' }  %><br></div>
  <% end %>
</div>

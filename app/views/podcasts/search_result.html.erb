<div class="container">
  <div class="newbox">

    <%= link_to "Create Playlist", new_playlist_path, class: "btn btn-primary" %>
    <% @results.each do |result| %>
    <div class="card">
      <div class="card-block">
        <h3 class="card-title"><%= result[:ep_title]%></h4>
          <h6 class="card-subtitle text-muted">Podcast Publisher: <%= result[:show_title]%><br></h6>
        </div>
        <p class="card-text">Description <%= result[:description].first(140)%></p>
        <img src=<%=result[:image]%> alt="Card image">
        <div class="card-block">

          <%= link_to "Add To Playlist", edit_playlist_path(1), class: "btn btn-primary" %>
          <hr>
        </div>
      </div>
      <% end %>
    </div>
  </div>

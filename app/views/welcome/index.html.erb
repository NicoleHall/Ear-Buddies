<div class="container">
  <div class="well center">
<h1 class="funfont">Ear Buddies</h1>
<% if current_user %>
  <p >hello, <%= current_user.name %></p>
  <%= link_to "Search", podcasts_search_path, class: "btn btn-primary"%>
  <% if current_user.playlists == [] %>
  <%= link_to "Create A Playlist", new_playlist_path, class: "btn btn-primary" %>
  <% else %>
  <%= link_to "Your Playlists", playlists_path, class: "btn btn-primary"%>
  <% end %>
  <%= link_to "Logout", logout_path, class: "btn btn-primary"%>
<% else %>
  <%= link_to "Login", login_path, class: "btn btn-primary"%>
<% end %>
</div>
</div>

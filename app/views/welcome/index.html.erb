<div class="container">
  <div class="well center">
   <h1 class="funfont">Ear Buddies</h1>
    <h4>Hello <%= current_user.name if current_user%></h4>
    <% if current_user && current_user.playlists != [] %>
     <%= render "search_create_playlists_logout_buttons" %>
    <% elsif current_user && current_user.playlists == [] %>
     <%= render "create_and_logout_buttons" %>
   <% else %>
    <%= link_to "Login", login_path, class: "btn btn-primary"%>
  <% end %>
 </div>
</div>
